# API Configuration
VITE_API_URL=http://localhost:5001/api

# OpenAI Configuration (for frontend fallback)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Anthropic Model Selection - Options:
# claude-3-opus-20240229 (most capable, but slower and more expensive)
# claude-3-sonnet-20240229 (balanced)
# claude-3-haiku-20240307 (faster, less expensive)
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Database Configuration
SQLALCHEMY_DATABASE_URI=sqlite:///helix.db

# Security
SECRET_KEY=change_this_to_a_secure_random_string_in_production

# Feature Flags
# Set to "true" to use Anthropic instead of OpenAI
VITE_USE_ANTHROPIC=true

# Set to "true" to use backend API (recommended)
VITE_USE_BACKEND_API=true

# Set to "true" to enable development features
DEBUG=false
